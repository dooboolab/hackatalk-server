{
  "name": "hackatalk-server",
  "version": "0.0.1",
  "description": "Hackatalk Server",
  "main": "src/server.ts",
  "repository": "https://github.com/dooboolab/hackatalk-server",
  "author": "dooboolab",
  "license": "GPL-3.0-only",
  "scripts": {
    "start": "cross-env NODE_ENV=development nodemon --exec ts-node src/server.ts",
    "prod": "cross-env NODE_ENV=production ts-node src/server.ts",
    "pm2": "cross-env pm2 start ts-node -- -P tsconfig.json ./src/server.ts --node-args='--development' --watch",
    "pm2:prod": "cross-env pm2 start ts-node -- -P tsconfig.json ./src/server.ts --node-args='--production'",
    "watch": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/index.ts",
    "lint": "eslint src/**/**/*.ts && eslint tests/**/**/*.ts",
    "tsc": "tsc",
    "test": "NODE_ENV=test jest",
    "test:watch": "jest --watch",
    "codegen": "graphql-codegen",
    "generate": "graphql-codegen --config codegen.yml",
    "codecov": "codecov"
  },
  "dependencies": {
    "apollo-server": "^2.9.7",
    "apollo-server-express": "^2.9.7",
    "bcrypt-nodejs": "^0.0.3",
    "cors": "^2.8.5",
    "graphql": "^14.5.8",
    "graphql-import": "^0.7.1",
    "http": "^0.0.0",
    "jest": "^24.9.0",
    "jsonwebtoken": "^8.5.1",
    "merge-graphql-schemas": "^1.7.0",
    "mysql2": "^2.0.0",
    "sequelize": "^5.21.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.8.2",
    "@graphql-codegen/core": "^1.8.2",
    "@graphql-codegen/typescript": "^1.8.2",
    "@graphql-codegen/typescript-resolvers": "1.8.2",
    "@types/bcrypt-nodejs": "^0.0.30",
    "@types/bluebird": "^3.5.28",
    "@types/express": "^4.17.1",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^24.0.20",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/node": "^12.11.7",
    "@types/sequelize": "^4.28.6",
    "@types/validator": "^10.11.3",
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@typescript-eslint/parser": "^2.5.0",
    "codecov": "^3.6.1",
    "cross-env": "^6.0.3",
    "dotenv": "^8.2.0",
    "eslint": "^6.6.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "nodemon": "^1.19.4",
    "pm2": "^4.1.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "typescript": "3.6.4"
  },
  "resolutions": {
    "graphql": "14.5.8"
  }
}
